<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:gravity="center" android:layout_width="33dp"
    android:background="#F0F3F8"
    android:layout_margin="5dp"
    android:layout_height="83dp" android:id="@+id/horizon_item">
    <TextView android:id="@+id/dot_sign"
        android:visibility="invisible"
        android:background="#FF9124"
        android:layout_width="7dp"
        android:layout_height="7dp"/>
    <TextView android:id="@+id/text_day"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="M"
        android:textColor="#596279"
        android:layout_marginVertical="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/text_date"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="14"
        android:textColor="#7F8A9C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>